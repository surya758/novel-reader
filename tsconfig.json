{
	"extends": "expo/tsconfig.base",

	"compilerOptions": {
		"strict": true,
		"baseUrl": "./",
		"paths": {
			"*": ["./*"],
			"@root/*": ["./*"],
			"@src/*": ["src/*"],
			"@components/*": ["src/components/*"],
			"@screens/*": ["src/screens/*"],
			"@navigation/*": ["src/navigation/*"],
			"@utils/*": ["src/utils/*"],
			"@api/*": ["src/api/*"]
		}
	}
}
